<resources>

    <style name="XOGame" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#1d2c46</item>
        <item name="colorAccent">#487da3</item>
        <item name="android:buttonStyle">@style/Button</item>
    </style>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@drawable/dialog_custom</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:background">@drawable/dialog_custom</item>
    </style>

    <style name="dialog_text_view" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/dialog_custom</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">27sp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="dialog_custom_edit_text" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/dialog_custom</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:inputType">number</item>
        <item name="android:windowSoftInputMode">stateVisible</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#233245</item>
        <item name="android:shadowColor">#FF000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">0.2</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/button_start_menu</item>
    </style>

    <style name="button_single_player" parent="Button">
        <item name="android:onClick">startGame</item>
    </style>

</resources>
