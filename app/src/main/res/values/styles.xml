<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#2f3c53</item>
        <item name="colorAccent">#487da3</item>
    </style>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@drawable/dialog_custom</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:background">@drawable/dialog_custom</item>
    </style>

    <style name="dialog_edit_text" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/dialog_custom</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:inputType">number</item>
        <item name="android:windowSoftInputMode">stateVisible</item>
    </style>

    <style name="Button" parent="@android:style/Widget.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#233245</item>
        <item name="android:shadowColor">#FF000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">0.2</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="start_menu_button" parent="Button">
        <item name="android:background">@drawable/button_start_menu</item>
        <item name="android:onClick">startGame</item>
    </style>

    <style name="game_button" parent="Button">
        <item name="android:background">@drawable/button_clean</item>
    </style>

</resources>
